{
  "extends": ["eslint:recommended", "airbnb/base", "plugin:inferno/all"],
  "plugins": [
    "inferno"
  ],
  "settings": {
    "inferno": {
      "pragma": "Inferno",  // Pragma to use, default to "Inferno" 
      "version": "1.0" // Inferno version, default to the latest Inferno stable release 
    }
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true,
    }
  },
  "rules": {
    "no-console": 0,
    "quotes": [2, "double"],
    "class-methods-use-this": 0,
    "prefer-template": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "no-nested-ternary": 0,

    "import/imports-first": 2,
    "import/no-mutable-exports": 2,
    "import/prefer-default-export": 2,

    "inferno/jsx-space-before-closing": ["error", "always"],
    "inferno/jsx-indent": [2, 2],
    "inferno/jsx-indent-props": [2, 2],
    "inferno/jsx-no-bind": 0,
    "inferno/jsx-max-props-per-line": 0,
    "inferno/jsx-filename-extension": 0,
    "inferno/jsx-sort-props": 0,
    "inferno/jsx-no-literals": 0,
    "inferno/jsx-handler-names": 0,
    "inferno/no-set-state": 0,
  },
  "env": {
    "browser": true,
    "node": true
  }
}